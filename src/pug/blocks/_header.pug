+menu 
.container 
	header.header#Home
		p.header__name-company FindPlace
		nav.nav.header__nav
			+burger-menu
			.header__box-control
				ul.nav__list
					each item in links
						li.nav__item
							a.nav__link(href=`#${item}`) #{item}
				.header__select-languages.select-languages#select-languages
					+globe
					p.select-languages__languages English
					+arrow-down
				.toggle-switch.header__toggle
					label.toggle-switch__label
						input.toggle-switch__checkbox(type='checkbox')#mod
						span.toggle-switch__slider
		
